#!/usr/bin/env bash
# This script creates a PID file, displays "To infinity and beyond" indefinitely, and handles SIGTERM and SIGQUIT signals.

# Create the PID file
echo $$ > /var/run/myscript.pid

# Display "To infinity and beyond" indefinitely
while true; do
    echo "To infinity and beyond"
    sleep 2
done

# Handle SIGTERM and SIGQUIT signals
trap 'echo "I hate the kill command"; rm /var/run/myscript.pid; exit' SIGTERM SIGQUIT
trap 'echo "Y U no love me?!"' SIGINT
